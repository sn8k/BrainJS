<!DOCTYPE html>
<html>
<head>
  <title>BrainJS Version <%= version %></title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    body {
      display: flex;
    }
    .sidebar {
      width: 250px;
      background: #f8f9fa;
      height: 100vh;
      position: fixed;
      transition: width 0.3s;
      overflow-x: hidden;
    }
    .sidebar.collapsed {
      width: 70px;
    }
    .sidebar .sidebar-header {
      display: flex;
      align-items: center;
      padding: 1rem;
      justify-content: space-between;
    }
    .sidebar .menu {
      list-style: none;
      padding: 0;
    }
    .sidebar .menu-item {
      padding: 1rem;
    }
    .content {
      margin-left: 250px;
      padding: 1rem;
      transition: margin-left 0.3s;
      flex-grow: 1;
      min-height: 100vh;
    }
    .content.collapsed {
      margin-left: 70px;
    }
    footer {
      position: absolute;
      bottom: 0;
      width: 100%;
      text-align: center;
      padding: 1rem;
      background: #f8f9fa;
    }
  </style>
</head>
<body>
  <div class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <h4>BrainJS</h4>
      <button class="btn btn-light" id="toggleSidebar">&#9776;</button>
    </div>
    <ul class="menu" id="menu">
      <li class="menu-item"><a href="/">Dashboard</a></li>
      <li class="menu-item"><a href="/maintenance">Maintenance</a></li>
      <li class="menu-item"><a href="/modules">Modules</a></li>
    </ul>
  </div>
  <div class="content" id="content">
    <h1>BrainJS Version <%= version %></h1>
    <form action="/upload" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="module">Select Module (.tar.gz)</label>
        <input type="file" class="form-control" id="module" name="module" required>
      </div>
      <button type="submit" class="btn btn-primary">Upload</button>
    </form>
    <h2 class="mt-5">Installed Modules</h2>
    <ul id="modulesList">
      <% modules.forEach(module => { %>
        <li>
          <a href="/modules/<%= module %>"><%= module %></a>
          <form action="/delete" method="post" style="display:inline;">
            <input type="hidden" name="moduleName" value="<%= module %>">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <footer>
      <p>App Version: <%= version %></p>
    </footer>
  </div>
  <script>
    document.getElementById('toggleSidebar').addEventListener('click', function() {
      document.getElementById('sidebar').classList.toggle('collapsed');
      document.getElementById('content').classList.toggle('collapsed');
      document.getElementById('toggleSidebar').classList.toggle('collapsed');
    });

    function updateSidebar() {
      fetch('/modules/list')
        .then(response => response.json())
        .then(data => {
          const menu = document.getElementById('menu');
          while (menu.firstChild) {
            menu.removeChild(menu.firstChild);
          }
          menu.innerHTML = `
            <li class="menu-item"><a href="/">Dashboard</a></li>
            <li class="menu-item"><a href="/maintenance">Maintenance</a></li>
            <li class="menu-item"><a href="/modules">Modules</a></li>
          `;
          data.forEach(module => {
            const li = document.createElement('li');
            li.className = 'menu-item';
            li.innerHTML = `<a href="/modules/${module}">${module}</a>`;
            menu.appendChild(li);
          });
        });
    }

    updateSidebar();
  </script>
</body>
</html>
